{
  "name": "text-adventure",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-scripts": "1.1.4",
    "redux": "^4.0.0",
    "vis": "^4.21.0"
  },
  "scripts": {
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "eject": "react-scripts eject",
    "test": "NODE_ENV=development nyc mocha -r jsdom-global/register --recursive --reporter mochawesome --compilers js:babel-core/register ./test",
    "build-css": "node-sass-chokidar src/sass -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/sass -o src/ --watch --recursive"
  },
  "devDependencies": {
    "babel-preset-react-app": "^3.1.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jsdom": "11.11.0",
    "jsdom-global": "3.0.2",
    "mocha-param": "^2.0.0",
    "mochawesome": "^3.0.2"
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
